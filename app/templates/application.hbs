<BasicDropdown as |dd|>
  <dd.Trigger>Click me</dd.Trigger>
  <dd.Content>
    Names:
    <PowerSelectMultiple
      @searchEnabled={{true}}
      @options={{this.names}}
      @selected={{this.name}}
      @placeholder="Select some names..."
      @onChange={{fn (mut this.name)}}
      @closeOnSelect={{false}}
      as |name|
    >
      {{name}}
    </PowerSelectMultiple>
  </dd.Content>
</BasicDropdown>